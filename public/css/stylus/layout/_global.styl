svg
	max-width 100%

button, svg, ng-md-icon, img, .admin-name, span, md-chip, section, p
	&:focus
		outline 0

button.md-button
	text-transform none
	font-size 90%
	padding-right 12px
	padding-left 12px
	// font-weight bold
	Roboto-Regular()
button.md-button.sec
	margin-right 20px 
	span
		color palette('Light Blue', '500') 
// a.md-button.md-primary.md-raised, a.md-button.md-primary.md-fab, .md-button.md-primary.md-raised, .md-button.md-primary.md-fab

md-input-container.md-default-theme label, 
	md-input-container.md-default-theme .md-placeholder
		color palette('Grey', '500') 
md-input-container
	padding-bottom 18px
	.input-search
		background palette('Grey','100')
		line-height 40px
		padding-left 50px
		padding-right 10px
		// box-shadow 0px 3px 1px -2px rgba(0, 0, 0, 0.14), 0px 2px 2px 0px rgba(0, 0, 0, 0.098), 0px 1px 5px 0px rgba(0, 0, 0, 0.084)
		+desktop()
			line-height 47px
			font-size 120%

md-dialog.md-transition-in
	-webkit-transform none !important
	transform none !important
md-dialog
	max-width 95%
	max-height 87%
	+desktop()
		max-width 67%
	+hd()
		max-width 50%
	h1
		color white
		font-weight bold
	md-dialog-content
		// min-height 400px
	// 	box-shadow  0px -1px 2px rgba(50, 50, 50, 0.12)
	.md-actions
		border-top 1px solid palette('Grey','200')
		background-color palette('Grey', '100')
		Roboto-Regular()
		.button-silver
			background-color rgba(158,158,158,0.2)

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
	display none !important

body
	Roboto-Light()
	background-color palette('Grey', '100')
	height 100%
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	-webkit-touch-callout: none;
	-webkit-user-select: none;

a
	text-decoration none
	color palette('Light Blue', '500') 
	color inherit
	&:link
		text-decoration none
	&:visited
		text-decoration none

