md-dialog
	md-dialog-content.insert-training
		padding 0
		position relative
		.taining-dialog-content
			col(12/12,gutter:0)
			box-sizing border-box
			.open-tabs
				width 100%
				height 100%
				background-color palette('Grey','50')
				position absolute
				top 0
				left 0
				z-index 25
				opacity .8
				display none
			.way-training
				col(4/12,gutter:0)
				text-align center
			.way-add
				col(8/12,gutter:0)
				span 
					font-size 80%
					color palette('Grey','700')
					line-height 30px
				ng-md-icon
					svg
						position relative
						top 30px
						left 10px
						background palette('Blue','500')

