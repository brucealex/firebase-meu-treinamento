.ds-user
	col(12/12,gutter:0)
	.ds-user-content
		col(12/12,gutter:0)
		box-sizing border-box
		margin-bottom 18px
		padding-left 5px
		padding-right 5px
		line-height 55px
		// border 1px solid palette('Grey','300')
		box-shadow 0 1px 2px 1px rgba(0,0,0,.25)
		background-color white
		ng-md-icon
			svg
				position relative
				vertical-align middle
				+desktop()
					width 28px
					height 28px
		+below(700px)
			line-height 43px
			margin-bottom 15px
		+desktop()
			line-height 63px
			margin-bottom 23px
		.ds-user-item--image
			col(1.5/12,gutter:0)
			box-sizing border-box
			text-align center
			img
				display inline-block
				box-sizing border-box
				border 1px solid palette('Grey','300')
				position relative
				top -1px
				max-width 65%
				vertical-align middle
				+below(800px)
					max-width 90%
				+desktop()
					max-width 95%
		.ds-user-item--name
			col(5.5/12,gutter:0)
			text-align left
			position relative
			p
				margin 0
				position relative
				top -5px
				font-weight bold
			span.ds-user-item--type
				display inline-block
				position absolute
				top .9em
				left 0
				color palette('Grey', '600') 
				font-size 70%
				margin 0
				+desktop()
					top 1.1em
					font-size 65%

		.ds-user-item--switch
			col(3/12,gutter:0)
			text-align center
			md-switch.md-primary
				display inline-block
				margin 0
				vertical-align middle
			+desktop()
				col(2.8/12,gutter:0)
		.ds-user-item--edit
			col(1/12,gutter:0)
			text-align center
			cursor pointer
			+desktop()
				col(1.1/12,gutter:0)
		.ds-user-item--delete
			col(1/12,gutter:0)
			text-align center
			cursor pointer
			+desktop()
				col(1.1/12,gutter:0)
			ng-md-icon
				svg
					&:hover
						fill: palette('Red','A400')
						
