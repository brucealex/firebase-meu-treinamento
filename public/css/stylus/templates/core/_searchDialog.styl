	md-dialog-content
		.new-user
			col(5/5, gutter:0)
			.avatar
				col(5/5, gutter:0)
				margin-top 5%
				text-align center
				img
					max-width 20%
				.uploadcare-widget-button-open
					background-color palette('Blue', '400')
			.attributes
				col(6/6, gutter:0)
				box-sizing border-box
				padding-right 3%
				padding-left 3%
				padding-top 1em
				.login-name
					col(3/6, gutter:0)
					box-sizing border-box
					padding-right 1.4em
				.login-surname
					col(3/6, gutter:0)
					box-sizing border-box
					padding-left 1.4em
				.login-phone
					col(6/6, gutter:0)
				.login-birthday
					col(6/6, gutter:0)

